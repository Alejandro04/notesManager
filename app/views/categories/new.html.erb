<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Categorias</title>
    <script src="js/vue.js" charset="utf-8"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.16.2/axios.min.js" charset="utf-8"></script>
  </head>
  <body>
    <div class="container" id="content">
        <h2 style="font-weight: 100">Registro de Categoria</h2>

        <form class="form-horizontal" role="form" method="POST">

          <div class="form-group">
              <div class="col-md-12">
                  <input type="email" class="form-control" name="name" placeholder="Nombre" v-model="name">
              </div>
          </div>

            <div class="form-group">
                <div class="col-md-12">
                    <input type="password" class="form-control" name="descripcion" placeholder="Descripcion" v-model="description">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12 col-md-offset-11">
                    <a  class="btn btn-primary" @click="register">
                        <i class="fa fa-btn fa-sign-in"></i> Registrar
                    </a>
                </div>
            </div>

        </form>

    </div>
  </body>
  <script type="text/javascript">
      var vm = new Vue({
      el: '#content',
      data: {
          name: "",
          description: "",
      },
      methods:{
        //change endpoint to get for save categories
        register: function(){
          axios.post('/categories', {
            params: {
              name: this.name,
              description: this.description,
            }
          })
          .then(response => {
            console.log(response)
          })
          .catch(response => {
            console.log("error")
          });
        },
      }
    });
  </script>

</html>
